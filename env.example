# LandComp App Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI API Configuration
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-example-key-replace-with-your-actual-key

# Google API Configuration
GOOGLE_API_KEY=AIza-example-key-replace-with-your-actual-key
GOOGLE_API_KEYS_FALLBACK=backup_key1,backup_key2,backup_key3

# =============================================================================
# Proxy Configuration (Optional)
# =============================================================================

# Main proxy for API requests
ALL_PROXY=socks5://proxy_server:port

# Backup proxies (comma-separated)
BACKUP_PROXIES=socks5://backup1:port,socks5://backup2:port

# =============================================================================
# Yandex Cloud Configuration (Optional)
# =============================================================================

YC_API_KEY_ID=your_yc_api_key_id
YC_API_KEY=your_yc_api_key
YC_FOLDER_ID=your_yc_folder_id

# =============================================================================
# Additional API Keys (Optional)
# =============================================================================

# Stability AI for image generation
STABILITY_API_KEY=your_stability_api_key

# Hugging Face API
HUGGINGFACE_API_KEY=your_huggingface_api_key

# =============================================================================
# Application Configuration
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=production

# Application port (for development)
PORT=3000

# =============================================================================
# Database Configuration (if needed in future)
# =============================================================================

# DATABASE_URL=postgresql://user:password@localhost:5432/landcomp_db

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Secret (if implementing authentication)
# JWT_SECRET=your_jwt_secret_here

# Session Secret
# SESSION_SECRET=your_session_secret_here

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Google Analytics ID
# GA_TRACKING_ID=your_ga_tracking_id

# =============================================================================
# Deployment Configuration
# =============================================================================

# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=80

# SSL Configuration (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# Development Configuration
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable hot reload
HOT_RELOAD=true

# Flutter web renderer
FLUTTER_WEB_RENDERER=html
